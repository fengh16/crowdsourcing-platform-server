{
  "env": {
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "extends": "standard",
  "rules": {
    "semi": ["error", "always"],
    "curly": "off",
    "no-var": "error",
    "arrow-parens": ["error", "as-needed"],
    "arrow-spacing": "error",
    "prefer-arrow-callback": "error"
  }
}
